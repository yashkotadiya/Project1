@model CI_plateform.Models.ViewModels.CardViewModel


@foreach(var item in Model.Missions)
        {
            <div class="col-lg-4 col-sm-12 col-xs-12 mb-3 filtercard" >
            <div class="card xyz" >


                <input type="hidden" value="@item.Country.CountryId" class="Card-CountryId" />              
                <input type="hidden" value="@item.City.CityId" class="Card-CityId" />
                <input type="hidden" value="@item.Theme.MissionThemeId" class="Card-ThemeId" />

                @foreach (var missionskill in item.MissionSkills)
                {
                    <input type="hidden" value="@missionskill.SkillId" class="Card-SkillId" />
                }


                <div class="grid-img">
                    <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-1.png"
                         class="card-img-top" alt="...">
                    <div class="d-flex justify-content-center">
                        <p class="card-title"> @item.Theme.Title</p>
                       
                    </div>
                    <div>

                        <div class="location over-buttons px-3 py-1 ">
                            <img src="/images/pin.png" />
                            <span >@item.City.Name</span>
                        </div>
                        <div class="add-favourite over-buttons px-3 py-1">
                            <img src="/images/heart.png" />
                        </div>
                        <div class="add-user over-buttons  px-3 py-1">
                            <img src="/images/user.png" />
                        </div>

                    </div>
                </div>
                <div class="card-body">


                    <div class="m-2">
                        <h4 class="card-text cardHeading">
                            @item.Title
                        </h4>
                        <p>
                           @item.ShortDescription
                        </p>
                        <div class="d-flex justify-content-between">
                            <p class="review-stat">Tree Canada</p>
                            <div class="small-ratings">
                                <i class="fa fa-star rating-color"></i>
                                <i class="fa fa-star rating-color"></i>
                                <i class="fa fa-star rating-color"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                    </div>

                    <div class="border-top border-bottom">
                        <div class="d-flex justify-content-center">

                            <p class="DateTime-title">@Convert.ToDateTime(item.StartDate).ToString("dd-MM-yyyy") to @Convert.ToDateTime(item.EndDate).ToString("dd-MM-yyyy")</p>
                        </div>

                        <div class="d-flex flex-wrap justify-content-around">
                            <div class=" d-flex justify-content-around">
                                <img class="w-50 h-50 mt-2 " src="/images/Seats-left.png" alt="">
                                <div class="mx-2">
                                    <p class="mb-0">23</p>
                                    <p class="mt-0">hhhh</p>
                                </div>
                            </div>
                            <div class=" d-flex justify-content-around">
                                <img class="w-50 h-50 mt-2 " src="/images/mission.png" alt="">
                                <div class="mx-2">
                                    <p class="mb-0">23</p>
                                    <p class="mt-0">hhhh</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="button" class="btn applybutton">
                            Apply
                            <img src="/images/right-arrow.png">
                        </button>
                    </div>
                </div>
            </div>
        </div>   
        }